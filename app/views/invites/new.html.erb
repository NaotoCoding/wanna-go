<%= render 'groups/second_header', group: @group %>

<h4 class='text-center mb-3'><%= @group.name %></h4>

<div class='w-75 mx-auto text-center mt-4'>
  <h4>招待</h4>

  <p class='mb-4'>招待するユーザーのユーザーコードを入力</p>

  <%= render 'shared/form_error_messages', model: @invite_form %>
  <%= form_with url: group_invites_path(@group) do |f| %>
    <div class='mb-3'>
      <%= f.label :unique_code, 'ユーザーコード', class: 'fw-bolder mb-2' %>
      <%= f.text_field :unique_code, class: 'form-control' %>
    </div>

    <%= f.submit '招待する', class: 'btn btn-success me-4' %>
    <%= link_to 'キャンセル', group_group_users_path(@group), class: 'btn btn-secondary' %>
  <% end %>
</div>
