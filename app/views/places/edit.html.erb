<%= render 'groups/second_header', group: @group %>

<h4 class='text-center mb-3'><%= @group.name %></h4>

<div class='w-75 mx-auto text-center mt-4'>
  <%= form_with model: @place, url: group_place_path(@group, @place) do |f| %>
    <div class='mb-2'>
      <%= render 'shared/form_error_messages', model: @place %>
    </div>

    <div class='mb-3'>
      <%= f.label :name, class: 'fw-bolder mb-2' %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class='mb-3'>
      <%= f.label :url, class: 'fw-bolder mb-2' %>
      <%= f.text_field :url, class: 'form-control' %>
    </div>

    <div class='mb-3'>
      <%= f.label :description, class: 'fw-bolder mb-2' %>
      <%= f.text_field :description, class: 'form-control form-control-lg' %>
    </div>

    <div class='d-flex justify-content-center'>
      <%= f.submit '更新する', class: 'btn btn-success me-4' %>
      <%= link_to 'キャンセル', group_place_path(@group, @place), class: 'btn btn-secondary' %>
    </div>
  <% end %>
</div>
