<%= render 'groups/second_header', group: @group %>

<h4 class='text-center mb-3'><%= @group.name %></h4>

<div class='w-75 mx-auto text-center mt-4'>
  <%= form_with model: @place, url: group_places_path(@group) do |f| %>
    <div class='mb-2'>
      <% input_errors = @place.errors.objects %>
      <% if input_errors.present? %>
        <% input_errors.each do |error| %>
          <p class='text-danger'><%= error.full_message %></p>
        <% end %>
      <% end %>
    </div>

    <div class='mb-3'>
      <%= f.label :name, class: 'fw-bolder mb-2' %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class='mb-3'>
      <%= f.label :url, class: 'fw-bolder mb-2' %>
      <%= f.text_field :url, class: 'form-control' %>
    </div>

    <div class='mb-3'>
      <%= f.label :description, class: 'fw-bolder mb-2' %>
      <%= f.text_field :description, class: 'form-control form-control-lg' %>
    </div>

    <div class='d-flex justify-content-center'>
      <%= f.submit '投稿する', class: 'btn btn-success me-4' %>
      <%= link_to 'キャンセル', group_path(@group), class: 'btn btn-secondary' %>
    </div>
  <% end %>
</div>
