<%= render 'groups/second_header', group: @group %>

<div class='mx-3'>
  <h4 class='text-center mb-3'><%= @group.name %></h4>
  <div class='mb-3 d-flex justify-content-center w-75 mx-auto'>
    <%= link_to '行きたいところ登録', new_group_place_path(@group), class: 'btn btn-success' %>
  </div>
  <h4 class='text-center mb-3'>行きたいところ一覧</h4>
  <% @places.each do |place| %>
    <div class='card mb-4'>
      <div class='card-body d-flex justify-content-between align-items-center'>
        <h5 class='mb-0'><%= place.name %></h5>
        <%= link_to '詳細', group_place_path(@group, place), class: 'btn btn-success' %>
      </div>
    </div>
  <% end %>
</div>
