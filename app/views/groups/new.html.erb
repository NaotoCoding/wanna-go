<%= turbo_frame_tag 'new_group' do %>
  <%= form_with model: @group do |f| %>
    <div class='mb-2'>
      <% input_errors = @group.errors.objects %>
      <% if input_errors.present? %>
        <% input_errors.each do |error| %>
          <p class='text-danger'><%= error.full_message %></p>
        <% end %>
      <% end %>
    </div>

    <div class='mb-2'>
      <%= f.label :name, 'グループ名', class: 'fw-bolder' %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <%= f.submit class: 'btn btn-success me-2', data: { turbo: false } %>
    <%= link_to 'キャンセル', root_path, class: 'btn btn-secondary' %>
  <% end %>
<% end %>
