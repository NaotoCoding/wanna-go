<div class='w-75 mx-auto text-center mt-4'>
  <h4>グループ作成</h4>
  <%= form_with model: @group do |f| %>
    <div class='mb-2'>
      <%= render 'shared/form_error_messages', model: @group %>
    </div>

    <div class='mb-3'>
      <%= f.label :name, class: 'fw-bolder mb-2' %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class='d-flex justify-content-center'>
      <%= f.submit class: 'btn btn-success me-4' %>
      <%= link_to 'キャンセル', root_path, class: 'btn btn-secondary' %>
    </div>
  <% end %>
</div>
