<header class='d-flex flex-column border-bottom ps-3 pe-3 pb-3 mb-4 mt-3'>
  <div class='mb-3 d-flex justify-content-between'>
    <div>
      <%= link_to root_path do %>
        <%= image_tag 'logo.svg' %>
      <% end %>
    </div>
    <div class='d-flex align-items-center me-3'>
      <%= link_to current_user.name, me_path, class: "me-5 #{ header_link_class_names(me_path) }" %>
    </div>
  </div>
  <div class='d-flex ms-2'>
    <%= link_to 'グループ', root_path, class: "me-5 #{ header_link_class_names(root_path) }" %>
    <%= link_to '招待', invites_path, class: "#{ header_link_class_names(invites_path) }" %>
  </div>
</header>
